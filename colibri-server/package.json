{
  "name": "colibri-server",
  "version": "1.0.0",
  "main": "dist/server/main.js",
  "author": "HCI Group, University of Konstanz",
  "scripts": {
    "lint": "eslint \"**/*.{js,ts}\"",
    "gui-build": "ng build --configuration production",
    "gui-watch": "ng build --watch",
    "server-watch-ts": "tsc --p src/server -w",
    "server-watch-node": "nodemon --watch dist/server/* --exec \"npm run server-start\"",
    "server-build": "tsc --p src/server",
    "server-start": "node dist/server/main.js",
    "debug": "concurrently -k -p \"[{name}]\" -n \"Angular,Node\" -c \"green.bold,blue.bold\" \"npm run gui-watch\" \"npm run server-watch-ts\"",
    "build": "npm run gui-build && npm run server-build",
    "start": "npm run server-start",
    "watch": "concurrently -k -p \"[{name}]\" -n \"Angular,Server-Compile,Server-Node\" -c \"green.bold,blue.bold,yellow.bold\" \"npm run gui-watch\" \"npm run server-watch-ts\" \"npm run server-watch-node\"",
    "publish": "cross-var \"docker build . -t hcikn/colibri:$npm_package_version && docker push hcikn/colibri:$npm_package_version && docker tag hcikn/colibri:$npm_package_version hcikn/colibri:latest && docker push hcikn/colibri:latest\""
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "16.0.3",
    "@angular/cdk": "16.0.2",
    "@angular/common": "16.0.3",
    "@angular/compiler": "16.0.3",
    "@angular/core": "16.0.3",
    "@angular/forms": "16.0.3",
    "@angular/material": "16.0.2",
    "@angular/platform-browser": "16.0.3",
    "@angular/platform-browser-dynamic": "16.0.3",
    "@angular/router": "16.0.3",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "csv-parse": "^5.4.0",
    "express": "^4.18.2",
    "flatbuffers": "^23.5.26",
    "lodash": "^4.17.21",
    "perfect-scrollbar": "^1.5.5",
    "rxjs": "~7.8.1",
    "socket.io": "^4.6.2",
    "socket.io-client": "^4.6.2",
    "source-map-support": "^0.5.21",
    "tedious": "^16.1.0",
    "uuid": "^8.3.2",
    "wavefile": "^11.0.0",
    "zone.js": "~0.13.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "16.0.3",
    "@angular-eslint/eslint-plugin": "^16.1.0",
    "@angular/cli": "16.0.3",
    "@angular/compiler-cli": "16.0.3",
    "@angular/language-service": "16.0.3",
    "@types/body-parser": "^1.19.2",
    "@types/csv-parse": "^1.2.2",
    "@types/express": "^4.17.17",
    "@types/lodash": "^4.14.195",
    "@types/moment": "^2.13.0",
    "@types/node": "^20.2.5",
    "@types/perfect-scrollbar": "^1.3.0",
    "@types/tedious": "^4.0.9",
    "@types/uuid": "^9.0.6",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "concurrently": "^8.0.1",
    "cross-var": "^1.1.0",
    "eslint": "^8.41.0",
    "nodemon": "^2.0.22",
    "typescript": "5.0.4"
  }
}
